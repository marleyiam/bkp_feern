<div class="page-header">
  <h2>Realizar Inscricão</h2>
</div>

<%= simple_form_for @subscription, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :nome, label: 'Nome Completo', input_html: { class: 'span8' } %>
  <%= f.input :cpf, label: 'CPF' %>
  <%= f.input :empresa, label: 'Empresa ou Instituição' %>
  <%= f.input :endereco, label: 'Endereço', as: :text, input_html: { rows: 4, class: 'span8' } %>
  <%= f.input :email, label: 'E-mail' %>
  <%= f.input :telefone %>
  <%= f.input :skype %>
  <%= f.input :twitter %>
  <%= f.input :facebook %>

  <div class="form-actions">
    <%= f.submit 'Inscrever-se', class: 'btn btn-primary btn-large' %> <%= link_to 'Cancelar', root_path, class: 'btn btn-small btn-danger' %>
  </div>
<% end %>